{
    "$schema": "http://json-schema.org/schema",
    "id": "LibraryStarterSchematics",
    "title": "Library Starter options schema",
    "type": "object",
    "description": "Generate Angular library for project",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the library",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What is the name of your library?"
        }
    },
    "required": [
        "name"
    ]
}
